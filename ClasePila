package samara_t3;

public class ClasePila {

    NodoPila cima;
    int tam;

    public ClasePila() {
        this.cima = null;
        this.tam = 0;
    }

    public boolean EstaVacia() {
        return cima == null;
    }

    public void Agregar(int d) {
        NodoPila nuevo = new NodoPila(d);
        nuevo.siguiente = cima;
        cima = nuevo;
        tam++;
    }

    public int quitar() {
        int aux = cima.dato;
        cima = cima.siguiente;
        tam--;
        return aux;
    }

    public int cima() {
        return cima.dato;
    }

    public int tama() {
        return tam;
    }

    public void MostrarPila() {
        NodoPila aux = cima;
        while (aux != null) {
            System.out.println("[" + aux.dato + "]");
            aux = aux.siguiente;
        }
        System.out.println("");
    }

    public void NumerosRandom() {
        for (int i = 0; i < 10; i++) {
            int ram = ((int) Math.random() * 500 + 50);
            Agregar(ram);
        }
    }

}
